CREATE TABLE TranscriptionEntity (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    timestamp TEXT NOT NULL,
    originalText TEXT NOT NULL,
    polishedText TEXT
);

selectAll:
SELECT * FROM TranscriptionEntity ORDER BY id DESC;

insertItem:
INSERT INTO TranscriptionEntity (timestamp, originalText, polishedText) VALUES (?, ?, ?);

updateOriginalText:
UPDATE TranscriptionEntity SET originalText = ? WHERE id = ?;

updatePolishedText:
UPDATE TranscriptionEntity SET polishedText = ? WHERE id = ?;

deleteItem:
DELETE FROM TranscriptionEntity WHERE id = ?;